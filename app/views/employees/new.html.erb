<h1><%= t 'employees.add_new' %></h1>
<% @employee.password = @employee.password_confirmation = nil %>

<%= error_messages_for :employee, :header_message => I18n.t('employees.add_failed') %>
<% form_for :employee, :url => employees_path do |f| -%>
<p><%= label_tag 'login', I18n.t('username') %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'name', I18n.t('name') %><br />
<%= f.text_field :name %></p>

<p><%= label_tag 'password', I18n.t('password') %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', I18n.t('password_confirmation') %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= f.check_box :is_admin %>
<%= label_tag 'is_admin', I18n.t('employees.is_admin') %></p>

<p><%= submit_tag t 'add' %></p>
<% end -%>
