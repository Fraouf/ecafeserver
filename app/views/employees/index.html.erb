<h1><%= t 'employees.employees'%></h1>
<table id="employees">
	<tr>
		<th>Id</th>
		<th><%= t 'username' %></th>
		<th><%= t 'name' %></th>
		<th><%= t 'admin' %></th>
		<th class="nobg"></th>
	</tr>
	<% @employees.each do |employee| %>
	<tr>
		<td><%= employee.id %></td>
		<td><%= employee.login %></td>
		<td><%= employee.name %></td>
		<td><input type="checkbox" <% if employee.is_admin %>checked<% end %> disabled="true" /></td>
		<td><%= link_to I18n.t('edit'), edit_employee_path(employee) %> - 
			<% form_tag employee_path(employee), :method => :delete do %>
			<%= submit_tag t 'delete' %>
			<% end %></td>
	</tr>
	<% end %>
</table>
<br />
<div style="text-align: right;">
	<%= link_to I18n.t('employees.add_new'), :controller => "employees", :action => "new" %>
</div>
