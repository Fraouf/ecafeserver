<h1><%= t 'timecodes.timecodes'%></h1>
<table id="timecodes">
	<tr>
		<th><%= t 'timecode' %></th>
		<th><%= t 'time_left' %></th>
		<th><%= t 'timecodes.expiration_date' %></th>
		<th class="nobg"></th>
	</tr>
	<% @timecodes.each do |timecode| %>
	<tr>
		<td><%= timecode.code %></td>
		<td><% if timecode.unlimited %>
		<%= t 'unlimited' %>
		<% else %>
		<%= timecode.time %>
		<% end %></td>
		<td><% if timecode.expires %>
		<%= timecode.expiration %>
		<% else %>
		<%= t 'never' %>
		<% end %></td>
		<td><% if timecode.created_at == timecode.updated_at || current_employee.is_admin %>
			<% form_tag timecode_path(timecode), :method => :delete do %>
			<%= submit_tag t 'delete' %>
			<% end %>
			<% end %></td>
	</tr>
	<% end %>
</table>
<br />
<div style="text-align: right;">
	<%= link_to I18n.t('timecodes.add_new'), :controller => "timecodes", :action => "new" %>
</div>
