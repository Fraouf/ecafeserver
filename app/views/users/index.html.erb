<h1><%= t 'users.users'%></h1>
<table id="users">
	<tr>
		<th><%= t 'username' %></th>
		<th><%= t 'name' %></th>
		<th><%= t 'group' %></th>
		<th class="nobg"></th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.login %></td>
		<td><%= user.ldap_entry.cn %></td>
		<td><%= user.ldap_entry.group %></td>
		<td><%= link_to I18n.t('show'), user_path(user) %></td>
	</tr>
	<% end %>
</table>
<br />
<div style="text-align: right;">
	<%= link_to I18n.t('users.add_new'), :controller => "users", :action => "new" %>
</div>
