<h1><%= @customer.login %></h1>

<p><span style="font-weight: bold;"><%= I18n.t('username') %></span><br />
<%= @customer.login %></p>

<p><span style="font-weight: bold;"><%= I18n.t('name') %></span><br />
<%= @customer.name%></p>

<p><span style="font-weight: bold;"><%= I18n.t('email') %></span><br />
<%= @customer.email %></p>

<p><span style="font-weight: bold;"><%=  I18n.t('phone') %></span><br />
<%= @customer.phone %></p>

<p><span style="font-weight: bold;"><%= I18n.t('question') %></span><br />
<%= @customer.question %></p>

<p><span style="font-weight: bold;"><%= I18n.t('answer') %></span><br />
<%= @customer.answer %></p>

<p><span style="font-weight: bold;"><%= I18n.t('timecodes.timecodes') %></span></p>
<table id="timecodes">
	<tr>
		<th><%= t 'timecode' %></th>
		<th><%= t 'time_left' %></th>
		<th><%= t 'timecodes.expiration_date' %></th>
		<th class="nobg"></th>
	</tr>
	<% @customer.timecodes.each do |timecode| %>
	<tr>
		<td><%= timecode.code %></td>
		<td><% if timecode.unlimited %>
		<%= t 'unlimited' %>
		<% else %>
		<%= timecode.time %>
		<% end %></td>
		<td><% if timecode.expires %>
		<%= timecode.expiration %>
		<% else %>
		<%= t 'never' %>
		<% end %></td>
		<td><% if timecode.created_at == timecode.updated_at || current_employee.is_admin %>
			<% form_tag timecode_path(timecode), :method => :delete do %>
			<%= submit_tag t 'delete' %>
			<% end %>
			<% end %></td>
	</tr>
	<% end %>
</table>

<br />
<p><%= link_to I18n.t('edit'), edit_customer_path(@customer) %> -
<%= link_to I18n.t('customers.new_credit'), customers_path + '/new_credit/' + @customer.id.to_s %>
<% form_tag customer_path(@customer), :method => :delete do %>
  <%= submit_tag t 'delete' %>
<% end %></p>