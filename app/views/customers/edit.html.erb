<h1><%= t 'customers.edit' %></h1>

<%= error_messages_for :customer, :header_message => I18n.t('customers.edit_failed') %>
<% form_for @customer do |f| -%>
<p><%= label_tag 'login', I18n.t('username') %><br/>
<%= f.text_field :login, {:disabled => true} %></p>

<p><%= label_tag 'name', I18n.t('name') %><br />
<%= f.text_field :name %></p>

<p><%= label_tag 'password', I18n.t('password') %><br/>
<%= f.text_field :password %></p>

<p><%= label_tag 'email', I18n.t('email') %><br />
<%= f.text_field :email %></p>

<p><%= label_tag 'phone', I18n.t('phone') %><br />
<%= f.text_field :phone %></p>

<p><%= label_tag 'question', I18n.t('question') %><br />
<%= f.text_area :question %></p>

<p><%= label_tag 'answer', I18n.t('answer') %><br />
<%= f.text_area :answer %></p>

<p><%= submit_tag t 'edit' %></p>
<% end -%>