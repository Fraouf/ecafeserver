<h1><%= t 'customers.customers'%></h1>
<table id="customers">
	<tr>
                <th><%= t 'name' %></th>
		<th><%= t 'username' %></th>
		<th><%= t 'email' %></th>
		<th class="nobg"></th>
	</tr>
	<% @customers.each do |customer| %>
	<tr>
		<td><%= customer.login %></td>
		<td><%= customer.name %></td>
		<td><%= customer.email %></td>
		<td><%= link_to I18n.t('edit'), edit_customer_path(customer) %> -
			<% form_tag customer_path(customer), :method => :delete do %>
			<%= submit_tag t 'delete' %>
			<% end %></td>
	</tr>
	<% end %>
</table>
<br />
<div style="text-align: right;">
	<%= link_to I18n.t('customers.add_new'), :controller => "customers", :action => "new" %>
</div>
